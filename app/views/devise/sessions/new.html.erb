<div class='container center vertically-determined' id='main-container'> 
  <h2>Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="top-margin">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-field" %>
    </div>

    <div class="top-margin">
      <%= f.label :password %><br />
      <%= f.password_field :password, autocomplete: "off", class: "form-field" %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="top-margin">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>

    <div class="top-margin">
      <%= f.submit "Log in", class: 'btn btn-primary form-submit'%>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>