<div class='container center' id='main-container'> 
<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

   <div class="top-margin">
    <%= f.label :username %><br />
    <%= f.text_field :username, autofocus: true, class: "form-field" %>
  </div>

  <div class="top-margin">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-field" %>
  </div>

  <div class="top-margin">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    (min. <%= @minimum_password_length %> chars)
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", class: "form-field" %>
  </div>

  <div class="top-margin">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-field" %>
  </div>

  <div class="top-margin">
    <%= f.submit "Sign up", class: 'btn btn-primary form-submit' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>